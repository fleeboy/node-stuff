// Form helpers

mixin form(action, method, type)
    form(action=action, method=method, class='form-' + type)
        fieldset(class='fieldset-' + type)

mixin field(type, name, label)
    .field(class='field-' + type)
        label #{label}:
        input(type=type, name='user[#{name}]', value=user[name])